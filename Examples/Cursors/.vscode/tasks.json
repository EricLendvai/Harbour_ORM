{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SwitchOS",
            "windows": {
                "command": "${command:remote-containers.reopenInContainer}",
                "options": {
                    "statusbar": {"label" : "<Open Container - Go to Ubuntu>","hide" : false}
                }
            },
            "linux": {
                "command": "${command:remote-containers.reopenLocally}",
                "options": {
                    "statusbar": {"label" : "<Close Container - Go to Windows>","hide" : false}
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "RunDebug",
            "command": "${command:workbench.action.debug.start}",
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {"label" : "<Compile and Debug>","hide" : false}
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "CompileDebug",
            "type": "shell",
            "windows":{
                "command": "${workspaceFolder}\\..\\BuildTools\\BuildEXE.bat",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_EL_ROOT":"R:\\Harbour_EL",
                        "HB_ORM_ROOT":"R:\\Harbour_ORM",
                        "EXEName":"Cursors",
                        "BuildMode":"debug",
                        // "HB_COMPILER":"${input:CCompiler}"
                        "RunAfterCompile":"no",
                        "HB_COMPILER":"mingw64"
                    },
                    "statusbar": {"label" : "<Compile Debug>","hide" : false}
                }
            },
            "linux":{
                "command": "${workspaceFolder}/../BuildTools/BuildEXE.sh",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_EL_ROOT":"/src/Harbour_EL",
                        "HB_ORM_ROOT":"/src/Harbour_ORM",
                        "EXEName":"Cursors",
                        "BuildMode":"debug",
                        "RunAfterCompile":"no",
                        "HB_COMPILER":"gcc"
                    },
                    "statusbar": {"label" : "<Compile Debug>","hide" : false}
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "CompileAndRunRelease",
            "type": "shell",
            "windows":{
                "command": "${workspaceFolder}\\..\\BuildTools\\BuildEXE.bat",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_EL_ROOT":"R:\\Harbour_EL",
                        "HB_ORM_ROOT":"R:\\Harbour_ORM",
                        "EXEName":"Cursors",
                        "BuildMode":"release",
                        "RunAfterCompile":"yes",
                        "HB_COMPILER":"${input:CCompiler}"
                    },
                    "statusbar": {"label" : "<Compile Release and Run>","hide" : false}
                }
            },
            "linux":{
                "command": "${workspaceFolder}/../BuildTools/BuildEXE.sh",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_EL_ROOT":"/src/Harbour_EL",
                        "HB_ORM_ROOT":"/src/Harbour_ORM",
                        "EXEName":"Cursors",
                        "BuildMode":"release",
                        "RunAfterCompile":"yes",
                        "HB_COMPILER":"gcc"
                    },
                    "statusbar": {"label" : "<Compile Release and Run>","hide" : false}
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "CompileRelease",
            "type": "shell",
            "windows":{
                "command": "${workspaceFolder}\\..\\BuildTools\\BuildEXE.bat",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_EL_ROOT":"R:\\Harbour_EL",
                        "HB_ORM_ROOT":"R:\\Harbour_ORM",
                        "EXEName":"Cursors",
                        "BuildMode":"release",
                        "RunAfterCompile":"no",
                        "HB_COMPILER":"${input:CCompiler}"
                    },
                    "statusbar": {"label" : "<Compile Release>","hide" : false}
                }
            },
            "linux":{
                "command": "${workspaceFolder}/../BuildTools/BuildEXE.sh",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_EL_ROOT":"/src/Harbour_EL",
                        "HB_ORM_ROOT":"/src/Harbour_ORM",
                        "EXEName":"Cursors",
                        "BuildMode":"release",
                        "RunAfterCompile":"no",
                        "HB_COMPILER":"gcc"
                    },
                    "statusbar": {"label" : "<Compile Release>","hide" : false}
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "RunReleaseMingw64",
            "type": "shell",
            "windows":{
                "command": "${workspaceFolder}\\build\\win64\\mingw64\\release\\Cursors.exe",
                "options": {
                    "statusbar": {"label" : "<Run Release Mingw64>","hide" : false}
                }
            },
            "linux":{
                "command": "${workspaceFolder}/build/lin64/gcc/release/Cursors.exe",
                "options": {
                    "statusbar": {"label" : "<Run Release gcc>","hide" : false}
                }
            },
            // "presentation": {"reveal": "never"}
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Run Release msvc64",
            "type": "shell",
            "windows":{
                "command": "${workspaceFolder}\\build\\win64\\msvc64\\release\\Cursors.exe",
                "options": {
                    "statusbar": {"label" : "<Run Release msvc64>","hide" : false}
                }
            },
            "linux":{
                "command": "${workspaceFolder}/build/lin64/gcc/release/Cursors.exe",
                "options": {
                    "statusbar": {"label" : "<Run Release gcc>","hide" : true}
                }
            },
            // "presentation": {"reveal": "never"}
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "DelAllPPO",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {"label" : "<Del All PPO>","hide" : false}
            },
            "windows":{
                "command": "del *.ppo"
            },
            "linux":{
                "command": "rm *.ppo"
            },
            "presentation": {"reveal": "never"}
        }
    ],
    "inputs": [
        {
            "id": "CCompiler",
            "type": "pickString",
            "description": "Select C Compiler",
            "options": ["mingw64","msvc64"],
            "default": "mingw64"
        }
    ]
}