{
    "name": "harbour_orm",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
        "settings": {
            "files.autoSave": "onFocusChange",
            "harbour.compilerExecutable": "/usr/local/bin/harbour",
            "harbour.extraOptions": "-i/usr/local/include",
            "harbour.extraIncludePaths": [
                "/usr/local/include/",
                "/src/Harbour_EL/"
                ],
            "harbour.warningLevel": 1,
            "harbour.decorator": true
        },
        "extensions": [
            "aperricone.harbour",
            "actboy168.tasks"
            ]
        }
    },
    "mounts": [
        "source=R:\\Harbour_EL,target=/src/Harbour_EL,type=bind,consistency=default"
    ]
}
